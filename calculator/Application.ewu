  $rect <410,150,610,190>
  method float ExecuteOperation( arg float first, arg float second, arg string op )
  {
    var float res = 0.0;

    switch (op[0])
          {
            case '+':
              res = first + second;
            case '-':
              res = first - second;
            case '*':
              res = first * second;
            case '/':
              if (second != 0.0)
                res = first / second;
              else
                res = 0.0;
            case '%':
             { var float temp = first * second;
              res = temp / 100;     }
            case '^': 
              res =  math_pow(first, second);
            default:
              res = 0.0;
          }

    return res;
  }

