  $rect <20,20,160,60>
  object Views::Border Border
  {
    preset StackingPriority = 2;
    preset Bounds = <32,40,272,115>;
    preset Color = #000000FF;
  }

  $rect <360,70,560,110>
  object Core::KeyPressHandler KeyHandler
  {
    preset OnPress = KeySlotMethod;
    preset OnHold = KeySlotMethod;
  }

  $rect <360,120,560,160>
  slot KeySlotMethod
  {
    sender; /* the method is called from the sender object */
    var string str = KeyHandler.CharCode;

    if(Text.String == "result here" || KeyHandler.CharCode == 'C')
    {
      Text.String = "";
      Result = 0.0;
    }

    if((str >= "0") && (str <= "9"))
    {
      Text.String = Text.String + KeyHandler.CharCode;
    } 
    else
    {
      if (OperatorSet == false)
      {
        FirstOperand = Text.String.parse_float(-1.0);
        Operator = KeyHandler.CharCode;
        Text.String = "";
      } 
      else 
      {
        if(KeyHandler.CharCode == '=' || KeyHandler.Code == Core::KeyCode.Enter) 
        {
          SecondOperand = Text.String.parse_float(-1.0);

          switch (Operator[0])
          {
            case '+':
              Result = FirstOperand + SecondOperand;
            case '-':
              Result = FirstOperand - SecondOperand;
            case '*':
              Result = FirstOperand * SecondOperand;
            case '/':
              if (SecondOperand != 0.0)
                Result = FirstOperand / SecondOperand;
              else
                Result = 0.0; 
            default:
              Result = 0.0;
          }
          Text.String = Result;
          OperatorSet = false; 
        } else 
        {
          Operator = KeyHandler.CharCode; 
        }
      }
    }



  }

  $rect <600,210,800,250>
  property float FirstOperand;

  $rect <600,250,800,290>
  onset FirstOperand
  {
    // The value doesn't change - nothing to do.
    if ( pure FirstOperand == value )
      return;

    var string str = value;
    if((str >= "0") && (str <= "9"))
    {
      pure FirstOperand = value;
      Text.String = value;
    }

    //trace "first operand setter";
    // TO DO:
    // 
    // Now you can handle the alternation of the property.
  }

  $rect <600,290,800,330>
  onget FirstOperand
  {
    return pure FirstOperand;
  }

  $rect <360,330,560,370>
  property float SecondOperand;

  $rect <360,370,560,410>
  onset SecondOperand
  {
    // The value doesn't change - nothing to do.
    if ( pure SecondOperand == value )
      return;

    var string str = value;
    if((str >= "0") && (str <= "9") && OperatorSet == true)
    {
      pure SecondOperand = value;
      Text.String = value;
    }

    trace FirstOperand;
    trace SecondOperand;
    trace "second operand setter";

    // TO DO:
    // 
    // Now you can handle the alternation of the property.
  }

  $rect <360,410,560,450>
  onget SecondOperand
  {
    return pure SecondOperand;
  }

  $rect <601,393,801,433>
  property float Result;

  $rect <601,433,801,473>
  onset Result
  {
    // The value doesn't change - nothing to do.
    if ( pure Result == value )
      return;

    // Remember the property's new value.
    pure Result = value;
    Text.String = value;

    // TO DO:
    // 
    // Now you can handle the alternation of the property.
  }

  $rect <601,473,801,513>
  onget Result
  {
    return pure Result;
  }

  $rect <59,455,259,495>
  property string Operator;

  $rect <59,495,259,535>
  onset Operator
  {
    // The value doesn't change - nothing to do.
    if ( pure Operator == value )
      return;

    // Remember the property's new value.
    pure Operator = value;
    OperatorSet = true;
    Text.String = value;


    // TO DO:
    // 
    // Now you can handle the alternation of the property.
  }

  $rect <59,535,259,575>
  onget Operator
  {
    return pure Operator;
  }

  $rect <340,500,540,540>
  property bool OperatorSet = false;

  $rect <340,540,540,580>
  onset OperatorSet
  {
    // The value doesn't change - nothing to do.
    if ( pure OperatorSet == value )
      return;

    // Remember the property's new value.
    pure OperatorSet = value;

    // TO DO:
    // 
    // Now you can handle the alternation of the property.
  }

  $rect <340,580,540,620>
  onget OperatorSet
  {
    return pure OperatorSet;
  }
